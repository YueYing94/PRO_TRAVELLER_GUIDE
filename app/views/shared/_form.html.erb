<%= simple_form_for tour do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :start_point %>
  <%= f.input :duration %>
  <%= f.input :capacity %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
